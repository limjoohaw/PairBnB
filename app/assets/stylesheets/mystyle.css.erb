#sunsetpic, #relaxpic {
  background-position: center;
  background-size: cover;
  background-repeat: no-repeat;
  background-image: url('<%= asset_path("background/sunset.jpg") %>');
  height: 90vh;
}

#relaxpic {
   background-image: url('<%= asset_path("background/relax.jpg") %>');
}

.display-4 {
	font-size: 3rem;
}

.lead {
